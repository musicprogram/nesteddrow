<div class="form-group">
<%= simple_form_for [@cliente,@pedido], :html => { :class => 'form-horizontal' } do |f| %>
  
 
  <%= f.input :fechaPedido %>
  <%= f.input :descripcion %>
  <%= f.input :fechaEntrega %>
  <%= f.input :usuario %>
  </div>
  <div class="form-actions">
